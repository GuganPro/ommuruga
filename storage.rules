rules_version = '2';

// 1. Only authenticated users can write.
// 2. Uploaded files must be images.
// 3. The image size must be less than 5MB.
// 4. Users can only write to their own user-specific folder.
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
  }
}
